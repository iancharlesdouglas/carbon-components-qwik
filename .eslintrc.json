{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:qwik/recommended",
    "plugin:jsdoc/recommended",
    "plugin:storybook/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "tsconfigRootDir": "",
    "project": [
      "./tsconfig.json"
    ],
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "@typescript-eslint",
    "prettier",
    "jsdoc",
    "spellcheck"
  ],
  "rules": {
    "@typescript-eslint/ban-ts-comment": "off",
    "@typescript-eslint/ban-types": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "@typescript-eslint/no-empty-function": "off",
    "@typescript-eslint/no-empty-interface": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-inferrable-types": "off",
    "@typescript-eslint/no-namespace": "off",
    "@typescript-eslint/no-non-null-assertion": "off",
    "@typescript-eslint/no-this-alias": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "jsdoc/require-param-type": "off",
    "jsdoc/require-property-type": "off",
    "jsdoc/require-returns-type": "off",
    "no-case-declarations": "off",
    "no-console": "off",
    "prefer-spread": "off",
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "tabWidth": 2,
        "printWidth": 120,
        "semi": true,
        "singleQuote": true,
        "parser": "typescript",
        "arrowParens": "avoid"
      }
    ],
    "spellcheck/spell-checker": [
      "warn",
      {
        "comments": true,
        "strings": true,
        "identifiers": true,
        "templates": true,
        "lang": "en_US",
        "skipWords": [
          "activedescendant",
          "assistive",
          "autodocs",
          "breakpoint",
          "calc",
          "cds",
          "checkbox",
          "checkmark",
          "classnames",
          "combobox",
          "describedby",
          "divs",
          "dragonfruit",
          "dropdown",
          "durian",
          "flexbox",
          "haspopup",
          "href",
          "ichigo",
          "jackfruit",
          "jsx",
          "keydown",
          "labelled",
          "labelledby",
          "listbox",
          "ltr",
          "modif",
          "modifs",
          "msg",
          "noopener",
          "perc",
          "qombobox",
          "qwik",
          "readonly",
          "rtl",
          "selectable",
          "subgrid",
          "svg",
          "textbox",
          "tooltip",
          "uid",
          "unlabelled",
          "utf",
          "xlg",
          "2xl"
        ],
        "skipIfMatch": [
          "http://[^s]*",
          "^[-\\w]+/[-\\w\\.]+$"
        ],
        "skipWordIfMatch": [
          "^foobar.*$"
        ],
        "minLength": 3
      }
    ]
  }
}
